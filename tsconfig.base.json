{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/utils/*"],
      "content-collections": ["apps/nextjs-app/.content-collections/generated/index"],
      "content-collections/generated/*": ["apps/nextjs-app/.content-collections/generated/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "apps/**/*.{ts,tsx,js,jsx}",
    "libs/**/*.{ts,tsx,js,jsx}",
    "**/*.ts",
    "**/*.tsx",
    ".content-collections/generated/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
